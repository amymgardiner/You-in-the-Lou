<article class='post'>
  <div class='title'>
    <a href='{{post_url}}' target='_blank'>{{title}}</a>
    <span>({{format_url post_url}})</span></br>
    <a href='http://maps.google.com/maps?q={{post_address}}' target='_blank'>
      {{post_address}}</a>
    <p class='description'>{{{format_break post_description}}}</p>
  </div>
  <div class='meta'>
    {{vote_count}}
    {{format_plural 'like' vote_count}}
    by
    {{user.username}}
    on
    {{format_date created_at}}
    |
    <a href='/post/{{id}}'>{{comments.length}}
      {{format_plural 'comment' comments.length}}</a>
  </div>
</article>